  <div class="container">
    <form action="">
      <h1 class="title">Edit Your Product</h1>
      <p class="container-p">
        Fill out the form below to edit your item.
      </p>
      <div class="imgs" style="display: none;">
        <h3>üì∏ Product Images</h3>
        <p>
          Upload up to 4 images of your product. First image will be the main
          display image.
        </p>
        <div class="addimg">
          <label for="file">Upload Image</label>
          <input type="file" class="image-input" accept="image/jpeg, image/png, image/jpg, image/webp" id="file" />
          <label for="file1">Upload Image</label>
          <input type="file" class="image-input" accept="image/jpeg, image/png, image/jpg, image/webp" id="file1" />
          <label for="file2">Upload Image</label>
          <input type="file" class="image-input" accept="image/jpeg, image/png, image/jpg, image/webp" id="file2" />
          <label for="file3">Upload Image</label>
          <input type="file" class="image-input" accept="image/jpeg, image/png, image/jpg, image/webp" id="file3" />
        </div>
      </div>
      <div class="product-information">
        <h2>üìù Product Information</h2>

        <div class="product-title" id="same">
          <label for="">Product Title</label>
          <input type="text" placeholder="Enter a descriptive title for your product" class="input-proudct"
            id="title-input" value="<%= locals.title %>" />
        </div>
        <div class="product-discription" id="same">
          <label for="textarea">Product Description</label>
        </div>
        <div class="ai">
          <textarea name="" id="textarea" class="input-proudct"
            placeholder="Describe your product in detail - condition,features,reason"><%= locals.product_description %></textarea>
          <button type="button" class="ai-btn" id="ai-btn">‚ú® Ai Help</button>
        </div>
        <div class="product-Category" id="same">
          <label for="">Product Category</label>
          <select class="input-proudct" id="select-category" data-default="<%= locals.categories[0] %>" required>
            <option value="" disabled selected>Select product category</option>
            <% dbCategories.forEach(category => { %>
              <option value="<%= category %>"><%= category %></option>
            <% }); %>
          </select>
        </div>
        <div class="product-condition" id="same">
          <label for="">Product Condition</label>
          <select class="input-proudct" id="select-condition" data-default="<%= locals.condition %>" required>
            <option value="" disabled selected>Select product condition</option>
            <option value="New">New</option>
            <option value="Used-like New">Used-like New</option>
            <option value="Used-Good">Used-Good</option>
            <option value="Used - Acceptable">Used - Acceptable</option>
            <option value="For Parts or Not Working">For Parts or Not Working</option>
          </select>
        </div>
        <div class="product-price" id="same">
          <label for="">Price</label>
          <input value="<%= locals.price %>" type="number" placeholder="Enter Your Price" class="input-proudct" step="0.01" id="price-input"
            required />
        </div>
      </div>
      <div class="Seller-Contact-Information">
        <h3>üìçSeller Contact Information</h3>

        <div class="address" id="same">
          <label for="">Address</label>
          <input value="<%= locals.product_address %>" type="text" placeholder="Enter your address or genral location" class="input-proudct"
            id="address-input" required />
        </div>
        <div class="phone-num" id="same">
          <label for="">Phone Number</label>
          <input value="<%= locals.phone %>" type="text" placeholder="Enter your address or genral location" class="input-proudct"
            pattern="[+[0-9]]*" id="phone-input" required />
        </div>
      </div>
      <button class="submit-btn" id="list-product-btn">Edit Your Product</button>
    </form>
